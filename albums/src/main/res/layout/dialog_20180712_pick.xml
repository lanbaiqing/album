<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="相机"
        android:textSize="14sp"
        android:textColor="#0085ff"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_20180712_white_top_corners_5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddddd"
        />
    <TextView
        android:id="@+id/btn_albums"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="从相册选择"
        android:textSize="14sp"
        android:textColor="#0085ff"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_20180712_white_bottom_corners_5dp"
        />
    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="取消"
        android:textSize="14sp"
        android:textColor="#929292"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_20180712_white_corners_5dp"
        />
</LinearLayout>